<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/portfolio_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="10dp"
        android:paddingVertical="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Portfolio"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/black"/>

<!--    Header -->
    <TextView
        android:id="@+id/shares_owned_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="15dp"
        android:paddingVertical="5dp"
        app:layout_constraintTop_toBottomOf="@id/portfolio_title"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Shares Owned:"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/avg_cost_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="15dp"
        android:paddingVertical="5dp"
        app:layout_constraintTop_toBottomOf="@id/shares_owned_header"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Avg. Cost / Share:"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/total_cost_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="15dp"
        android:paddingVertical="5dp"
        app:layout_constraintTop_toBottomOf="@id/avg_cost_header"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Total Cost:"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/change_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="15dp"
        android:paddingVertical="5dp"
        app:layout_constraintTop_toBottomOf="@id/total_cost_header"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Change:"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/market_value_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="15dp"
        android:paddingVertical="5dp"
        app:layout_constraintTop_toBottomOf="@id/change_header"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Market Value:"
        android:textColor="@color/black"/>

<!--    Content -->
    <TextView
        android:id="@+id/shares_owned_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingVertical="5dp"
        app:layout_constraintTop_toTopOf="@id/shares_owned_header"
        app:layout_constraintLeft_toRightOf="@id/shares_owned_header"
        android:text="2"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/avg_cost_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingVertical="5dp"
        app:layout_constraintTop_toBottomOf="@id/shares_owned_header"
        app:layout_constraintLeft_toLeftOf="@id/shares_owned_content"
        android:text="$1.00"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/total_cost_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingVertical="5dp"
        app:layout_constraintTop_toBottomOf="@id/avg_cost_header"
        app:layout_constraintLeft_toLeftOf="@id/shares_owned_content"
        android:text="$1.00"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/change_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingVertical="5dp"
        app:layout_constraintTop_toBottomOf="@id/total_cost_header"
        app:layout_constraintLeft_toLeftOf="@id/shares_owned_content"
        android:text="$1.00"/>
    <TextView
        android:id="@+id/market_value_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingVertical="5dp"
        app:layout_constraintTop_toBottomOf="@id/change_header"
        app:layout_constraintLeft_toLeftOf="@id/shares_owned_content"
        android:text="$1.00"/>

<!--    Button -->
    <Button
        android:id="@+id/button_trade"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginRight="50dp"
        android:background="@drawable/rounded_corner"
        android:text="TRADE"
        android:textColor="@color/white"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>