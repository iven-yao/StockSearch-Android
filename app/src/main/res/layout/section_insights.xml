<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">
    <TextView
        android:id="@+id/insights_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="10dp"
        android:paddingVertical="5dp"
        android:text="Insignts"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/black"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Social Sentiments"
        android:paddingVertical="20dp"
        android:textColor="@color/black"
        android:textSize="20dp"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="15dp"
        android:paddingBottom="20dp"
        android:stretchColumns="*">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/table_company"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/table_header"
                android:text="Company Name"
                android:layout_margin="1dp"
                android:padding="3dp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/table_header"
                android:text="Reddit"
                android:layout_margin="1dp"
                android:padding="3dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/table_header"
                android:text="Twitter"
                android:layout_margin="1dp"
                android:padding="3dp"/>
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/table_header"
                android:text="Total Mentions"
                android:layout_margin="1dp"
                android:padding="3dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/reddit_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/table_content"
                android:layout_margin="1dp"
                android:padding="3dp"/>

            <TextView
                android:id="@+id/twitter_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/table_content"
                android:layout_margin="1dp"
                android:padding="3dp"/>
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/table_header"
                android:text="Positive Mentions"
                android:layout_margin="1dp"
                android:padding="3dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/reddit_pos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/table_content"
                android:layout_margin="1dp"
                android:padding="3dp"/>

            <TextView
                android:id="@+id/twitter_pos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/table_content"
                android:layout_margin="1dp"
                android:padding="3dp"/>
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/table_header"
                android:text="Negative Mentions"
                android:layout_margin="1dp"
                android:padding="3dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/reddit_neg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/table_content"
                android:layout_margin="1dp"
                android:padding="3dp"/>

            <TextView
                android:id="@+id/twitter_neg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/table_content"
                android:layout_margin="1dp"
                android:padding="3dp"/>
        </TableRow>
    </TableLayout>
    <WebView
        android:id="@+id/chart_trend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp"/>
    <WebView
        android:id="@+id/chart_eps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp"/>
</LinearLayout>