<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/stats_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="10dp"
        android:paddingVertical="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Stats"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/black"/>
<!--    header-->
    <TextView
        android:id="@+id/open_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingVertical="5dp"
        app:layout_constraintTop_toBottomOf="@id/stats_title"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Open Price:"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/high_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="50dp"
        android:paddingVertical="5dp"
        app:layout_constraintTop_toBottomOf="@id/stats_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="High Price:"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/low_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingVertical="5dp"
        app:layout_constraintTop_toBottomOf="@id/open_header"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Low Price:"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/prev_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="50dp"
        android:paddingVertical="5dp"
        app:layout_constraintTop_toBottomOf="@id/open_header"
        app:layout_constraintLeft_toLeftOf="@id/high_header"
        android:text="Prev. Close:"
        android:textColor="@color/black"/>

<!--    content -->
    <TextView
        android:id="@+id/open_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        app:layout_constraintTop_toBottomOf="@id/stats_title"
        app:layout_constraintLeft_toRightOf="@id/open_header"
        android:text="$1.00"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/high_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        app:layout_constraintTop_toBottomOf="@id/stats_title"
        app:layout_constraintLeft_toRightOf="@id/prev_header"
        android:text="$1.00"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/low_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        app:layout_constraintTop_toBottomOf="@id/open_header"
        app:layout_constraintLeft_toLeftOf="@id/open_content"
        android:text="$1.00"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/prev_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        app:layout_constraintTop_toBottomOf="@id/open_header"
        app:layout_constraintLeft_toLeftOf="@id/high_content"
        android:text="$1.00"
        android:textColor="@color/black"/>

</androidx.constraintlayout.widget.ConstraintLayout>